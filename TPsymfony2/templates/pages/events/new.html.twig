{% extends 'base.html.twig' %}

{% block title %}
    Ajout d'un Event
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #calendar {
            max-width: 90%;
            max-height: 90%;
        }
        .event-form .form-control {
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Ajouter un nouvel événement</h4>
                    </div>
                    <div class="card-body">

                        {{ form_start(form, { 'attr': {'class': 'event-form'} }) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, 'Nom de l\'événement', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Ex: Réunion annuelle' } }) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.date, 'Date de l\'événement', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.date, { 'attr': { 'class': 'form-control date-picker', 'placeholder': 'Choisissez une date' } }) }}
                            {{ form_errors(form.date) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.city, 'Lieu de l\'événement', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.city, { 'attr': { 'class': 'form-control', 'placeholder': 'Ex: Lille' } }) }}
                            {{ form_errors(form.city) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Confirmer l'ajout
                            </button>
                            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr('.date-picker', {
                locale: 'fr',
                // dateFormat: 'd-m-Y',
                minDate: 'today',
            });
        });
    </script>
{% endblock %}
