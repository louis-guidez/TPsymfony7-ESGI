{% extends 'base.html.twig' %}

{% block title %}
    Ajout d'un participant
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .participant-form .form-control {
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Ajouter un nouveau participant</h4>
                    </div>
                    <div class="card-body">

                        {{ form_start(form, { 'attr': {'class': 'participant-form'} }) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, 'Nom du participant', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Ex: Jean Dupont' } }) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.email, 'Email du participant', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Ex: jean.dupont@email.com' } }) }}
                            {{ form_errors(form.email) }}
                        </div>


                        <div class="form-group mb-3">
                            {{ form_label(form.city, 'Ville du participant', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.city, { 'attr': { 'class': 'form-control', 'placeholder': 'Ex: Lille' } }) }}
                            {{ form_errors(form.city) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.event, 'Événements associés', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.event, { 'attr': { 'class': 'form-control select-multiple', 'placeholder': 'Sélectionnez au moins un événément' } }) }}
                            {{ form_errors(form.event) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Confirmer l'ajout
                            </button>
                            <a href="javascript:window.history.back()" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
